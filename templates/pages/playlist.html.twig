{% extends "basefront.html.twig" %}
{% block body %}
    <div class="row mt-3">
        <div class="col">
            <h4 class="text-info mt-5">
                {{ playlist.name }}
            </h4>

            {# ðŸ‘‰ nombre de formations dans la playlist #}
            <p>
                <strong>Nombre de formations :</strong>
                {{ playlistformations|length }}
            </p>

            <strong>catÃ©gories : </strong>
                <!-- boucle pour afficher les catÃ©gories -->
                {% set anccategorie = '' %}
                {% for playlist in playlistcategories %}
                    {{ playlist.name }}&nbsp;
                {% endfor %}
            <br /><br />

            <strong>description :</strong><br />
                {{ playlist.description|nl2br }}
        </div>

        <div class="col">
            <!-- boucle sur l'affichage des formations -->
            {% for formation in playlistformations %}
                <div class="row mt-1">
                    <div class="col-md-auto">
                        {% if formation.miniature %}
                            <a href="{{ path('formations.showone', {id:formation.id}) }}">
                                <img src="{{ formation.miniature }}">
                            </a>
                        {% endif %}  
                    </div>
                    <div class="col d-flex align-items-center">
                        <a href="{{ path('formations.showone', {id:formation.id}) }}" 
                           class="link-secondary text-decoration-none">
                            {{ formation.title }}
                        </a>          
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
